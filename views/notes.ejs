<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>My NoteBook</h1>
    <form  class="form" action="/notes/createNote" method='POST'>
        <input class="text" type="text" placeholder="Your Note..." name='bullet'>
        <input class="submit" type="submit">
    </form>

<div class="line1"></div>
<div class="line2"></div>
    <ul>
    <% notes.forEach( el => { %>
        <li class='todoItem' data-id='<%=el._id%>'>
            <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.note %></span>
            <span class='fa fa-trash'></span>
            <div class="circle" id="c"></div>
            <div class="ring" id="Ring"></div>
            <div class="circle2" id="c2"></div>
        </li>
    <% }) %>    
    </ul>
    <footer><%= left %> </footer>
    <script src="js/main.js"></script>
</body>
</html>